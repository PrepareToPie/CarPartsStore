@model Carpart

<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100">
    <a href="#"><img class="card-img-top" src="@Model.ImageThumbnailUrl" alt=""></a>
    <div class="card-body">
      <h4 class="card-title">
        <a href="#">@Model.Name</a>
      </h4>
      <h5>@Model.Price.ToString("C")</h5>
      <p class="card-text">@Model.ShortDescription</p>
    </div>
    <div class="card-footer">
      <a class="btn btn-outline-primary" asp-controller="ShopCart" asp-action="AddToCart" asp-route-carpartId="@Model.CarpartId">Добавить в корзину</a>
    </div>
  </div>
</div>